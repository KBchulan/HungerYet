#order_tool[state='selected'], #order_tool[state='selected']
{
    background-color: rgb(255, 205, 97);
    color: rgb(255, 255, 255);
    border: 2px solid rgb(0,0,0);
    border-radius: 20px;
    min-width: 40px;
    max-width: 40px;
    min-height: 40px;
    max-height: 40px;
    qproperty-icon: url(:resources/button/food.svg);  /* 使用icon属性 */
    qproperty-iconSize: 24px 24px;
    border: 3px solid rgb(0, 0, 0);  /* 加粗边框表示选中状态 */
}